{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "outDir": "./_dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
