{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",                // Keep 'esnext' for modern module output
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",  // Emit declaration files into this directory
    "emitDeclarationOnly": false,
    "moduleResolution": "bundler",     // Use bundler for module resolution
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}