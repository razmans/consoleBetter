{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16", // or 'nodenext'
    "declaration": true,
    "outDir": "./_dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
