{
  "compilerOptions": {
    "target": "esnext",
    "module": "Node16",               // Align 'module' with 'moduleResolution'
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types", // Emit declarations to a types folder
    "emitDeclarationOnly": false,
    "moduleResolution": "Node16",     // Use Node16 module resolution strategy
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}