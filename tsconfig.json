{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "allowImportingTsExtensions": true,
    "declaration": true,          // Add this line
    "emitDeclarationOnly": true   // This can remain as is
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}